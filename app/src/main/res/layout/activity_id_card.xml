<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.taiwotejuosho.appleid.id_card">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:scaleType="centerCrop"
        android:src="@drawable/apple"
        android:id="@+id/imageView" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:scaleType="centerCrop"
        android:background="#000000" />

    <TextView
        android:id="@+id/txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:fontFamily="sans-serif-light"
        android:text="Apple Inc"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtView"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:fontFamily="sans-serif-light"
        android:text="Taiwo Tejuosho"
        />

    <TextView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:fontFamily="sans-serif-light"
        android:text="AppleCare Senior Advisor"
        />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/position"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:text="1, Infinite Loop,"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/txtLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:text="Cupertino, CA, 94043"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/txtLine3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLine2"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:text="312.647.6896"
        android:textColor="#ffffff"
        android:textSize="25dp" />
</RelativeLayout>
